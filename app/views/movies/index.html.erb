<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="movies">
        <% @movies.each do |movie| %>
          <%= link_to movie do %>
            <h4><%= movie.title %></h4>
            <p><%= movie.syllabus %></p>
          <% end %>
        <% end %>
      </div>
      <%= paginate @movies %>
    </div>
  </div>
</div>
